@model Laundry.Data.Models.Order.OrderIndexModel
@{
    ViewBag.Title = "سفارشات";
}
<h2>فهرست سفارشات</h2>
<p>
    <a asp-action="Add">سفارش جدید مشتری</a> | <a asp-action="AddNC">سفارش جدید</a>
</p>
<div class="row" style="font-size:medium;">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <table class="table table-hover table-responsive table-bordered">
            <thead>
                <tr>
                    <th>کد</th>
                    <th>نام</th>
                    <th>کارمند</th>
                    <th>مشتری</th>
                    <th>سرویس</th>
                    <th>نوع سرویس</th>
                    <th>تاریخ</th>
                    <th>تاریخ آماده شدن</th>
                    <th>هزینه</th>
                    <th>تنظیمات</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Orders != null)
                {
                    foreach (var order in Model.Orders)
                    {
                        <tr>
                            <td>@order.Order_ID</td>
                            <td>@order.Name</td>
                            <td>@order.Employee</td>
                            <td>@order.Customer</td>
                            <td>@order.Service</td>
                            <td>@order.ServiceCategory</td>
                            <td>@order.Date.ToShortPersianDateTimeString()</td>
                            <td>@order.DeliveryDate.ToShortPersianDateString()</td>
                            <td>@order.Cost</td>
                            <td>
                                <a asp-controller="Order" asp-action="Detail" asp-route-id="@order.Order_ID">
                                    <span class="glyphicon glyphicon-info-sign pull-right"></span>
                                </a>
                                <span class="pull-right">&nbsp;|&nbsp;</span>
                                <a asp-controller="Order" asp-action="Delete" asp-route-id="@order.Order_ID">
                                    <span class="glyphicon glyphicon-trash pull-right"></span>
                                </a>
                                <span class="pull-right">&nbsp;|&nbsp;</span>
                                <a asp-controller="Order" asp-action="Edit" asp-route-id="@order.Order_ID">
                                    <span class="glyphicon glyphicon-edit pull-right"></span>
                                </a>
                            </td>
                        </tr>
                    }
                }
               </tbody>
        </table>
    </div>

    <script>

    </script>
</div>
