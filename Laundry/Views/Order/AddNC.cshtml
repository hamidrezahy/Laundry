@model Laundry.Data.Models.Order.OrderAddNCModel

@{
    ViewData["Title"] = "AddNC";
    EmployeeDDLModel emp = (EmployeeDDLModel)ViewData["EmpDDL"];
    ServiceDDLModel srv = (ServiceDDLModel)ViewData["SrvDDL"];
}

<h2>ثبت سفارش جدید</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddNC">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-inline">
                <label asp-for="Employee_NationalCode" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <select asp-for="Employee_NationalCode" asp-items="@emp.EmployeeList"></select>
                </div>
            </div>
            <div class="form-inline">
                <label asp-for="Service_ID" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <select asp-for="Service_ID" asp-items="@srv.ServiceList"></select>
                </div>
            </div>
            <div class="form-inline" style="margin-top:120px;">
                <label asp-for="AfterDate" class="control-label"></label>

                <input asp-for="AfterDate" class="form-control" />
                <span>روز بعد</span>
                <span asp-validation-for="AfterDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <h3>اطلاعات مشتری</h3>
            <div class="form-group">
                <label asp-for="Customer_FirstName" class="control-label"></label>
                <input asp-for="Customer_FirstName" class="form-control" />
                <span asp-validation-for="Customer_FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer_LastName" class="control-label"></label>
                <input asp-for="Customer_LastName" class="form-control" />
                <span asp-validation-for="Customer_LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer_Phone" class="control-label"></label>
                <input asp-for="Customer_Phone" class="form-control" />
                <span asp-validation-for="Customer_Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer_State" class="control-label"></label>
                <input asp-for="Customer_State" class="form-control" />
                <span asp-validation-for="Customer_State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer_City" class="control-label"></label>
                <input asp-for="Customer_City" class="form-control" />
                <span asp-validation-for="Customer_City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer_Street" class="control-label"></label>
                <input asp-for="Customer_Street" class="form-control" />
                <span asp-validation-for="Customer_Street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer_Other" class="control-label"></label>
                <input asp-for="Customer_Other" class="form-control" />
                <span asp-validation-for="Customer_Other" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ایجاد" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">برگشت به لیست</a>
</div>

